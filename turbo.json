{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "out/**"
      ],
      "env": [
        "NEXT_PUBLIC_DOCS_PATH",
        "NEXT_PUBLIC_ALGOLIA_APPLICATION_ID",
        "NEXT_PUBLIC_ALGOLIA_INDEX_NAME",
        "NEXT_PUBLIC_ALGOLIA_API_KEY",
        "NEXT_PUBLIC_MENDABLE_ANON_KEY",
        "NEXT_PUBLIC_GA_ID",
        "NODE_ENV",
        "PUBLIC_URL",
        "DISABLE_ANALYTICS",
        "VERCEL_URL",
        "POSTGRES_URL"
      ]
    },
    "test": {},
    "test:watch": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
