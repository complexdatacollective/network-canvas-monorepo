{
	"name": "@codaco/analytics",
	"version": "9.0.1",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./server": {
			"types": "./dist/server.d.ts",
			"import": "./dist/server.js"
		}
	},
	"author": "Complex Data Collective <hello@complexdatacollective.org>",
	"description": "PostHog analytics wrapper for Network Canvas applications with installation ID tracking and error reporting",
	"publishConfig": {
		"tag": "alpha"
	},
	"scripts": {
		"build": "tsup src/index.ts src/server.ts --format esm --dts --clean --sourcemap",
		"publish": "pnpm build && npm publish --access public",
		"dev": "npm run build -- --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"typecheck": "tsc --noEmit"
	},
	"peerDependencies": {
		"next": "catalog:",
		"react": "catalog:"
	},
	"devDependencies": {
		"@codaco/tsconfig": "workspace:*",
		"@types/node": "catalog:",
		"@types/react": "catalog:",
		"tsup": "^8.5.1",
		"typescript": "catalog:",
		"vitest": "catalog:"
	},
	"dependencies": {
		"posthog-js": "^1.328.0",
		"zod": "catalog:"
	}
}
