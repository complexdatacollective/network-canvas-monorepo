{
	"private": true,
	"scripts": {
		"build": "pnpm -r build",
		"build:changed-packages": "node scripts/build-changed-packages.mjs",
		"dev": "pnpm -r dev",
		"test": "pnpm -r test",
		"test:watch": "pnpm -r test:watch",
		"publish-packages": "pnpm exec changeset publish",
		"version-packages": "pnpm exec changeset version",
		"changeset": "changeset add",
		"format-and-lint": "biome check .",
