		"lint-staged": "^16.1.6",
		"typescript": "catalog:"
	},
	"packageManager": "pnpm@10.15.1+sha256.8c53af02ae3ec1fb0ae75377f8d4d6217c2d7cbe6f03c16350cabf7493de6eff",
	"name": "network-canvas-monorepo",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=10.0.0"
	},
	"lint-staged": {
		"*": "pnpm run format-and-lint:fix"
	}
}
