{
	"private": true,
	"scripts": {
		"build": "pnpm -r build",
		"build:changed-packages": "node scripts/build-changed-packages.mjs",
		"dev": "pnpm -r dev",
		"test": "pnpm -r --filter '!network-canvas-interviewer' --filter '!network-canvas-architect' --filter '!@codaco/network-exporters' --filter '!@codaco/network-query' test",
		"test:watch": "pnpm -r --filter '!network-canvas-interviewer' --filter '!network-canvas-architect' --filter '!@codaco/network-exporters' --filter '!@codaco/network-query' test:watch",
		"publish-packages": "pnpm exec changeset publish",
		"version-packages": "pnpm exec changeset version && pnpm lint:fix",
		"changeset": "changeset add",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"typecheck": "pnpm -r --no-bail --filter '!network-canvas-interviewer' --filter '!network-canvas-architect' --filter '!@codaco/network-exporters' --filter '!@codaco/network-query' run typecheck",
		"prepare": "husky",
		"knip": "knip --exclude catalog"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@changesets/cli": "^2.29.8",
		"@types/node": "catalog:",
		"husky": "^9.1.7",
		"knip": "^5.80.2",
		"lint-staged": "^16.2.7",
		"typescript": "catalog:"
	},
	"pnpm": {
		"overrides": {
			"react-resize-aware": "3.1.3",
			"cheerio": "1.0.0-rc.12",
			"vite": "^7.2.2"
		}
	},
	"packageManager": "pnpm@10.18.2+sha512.9fb969fa749b3ade6035e0f109f0b8a60b5d08a1a87fdf72e337da90dcc93336e2280ca4e44f2358a649b83c17959e9993e777c2080879f3801e6f0d999ad3dd",
	"name": "network-canvas-monorepo",
	"lint-staged": {
		"*": "pnpm run lint:fix"
	}
}
