{
	"$schema": "https://unpkg.com/knip@latest/schema.json",
	"ignoreWorkspaces": [
		"apps/interviewer",
		"apps/architect-desktop",
		"packages/network-exporters",
		"packages/network-query"
	],
	"workspaces": {
		"packages/ui": {},
		"apps/analytics-web": {},
		"packages/analytics": {
			"entry": ["src/index.ts", "src/server.ts"]
		},
		"apps/documentation": {
			"ignore": ["lib/i18n/request.ts", "next-sitemap.config.js"]
		},
		"packages/protocol-validation": {},
		"apps/architect-vite": {
			"entry": ["index.html!", "src/main.tsx"],
			"project": ["src/**/*.{ts,tsx,js,jsx}"],
			"paths": {
				"~/*": ["./src/*"]
			},
			"ignore": ["src/**/*.d.ts", "src/test/**"]
		},
		"workers/development-protocol": {},
		"workers/posthog-proxy": {}
	}
}
