{
	"$schema": "https://unpkg.com/knip@latest/schema.json",
	"workspaces": {
		"packages/ui": {},
		"apps/analytics-web": {},
		"packages/analytics": {},
		"apps/documentation": {
			"ignore": [
				"lib/i18n/request.ts",
				"next-sitemap.config.js"
			]
		},
		"packages/protocol-validation": {},
		"apps/architect-vite": {
			"entry": [
				"index.html!",
				"src/main.tsx"
			],
			"project": [
				"src/**/*.{ts,tsx,js,jsx}"
			],
			"paths": {
				"~/*": [
					"./src/*"
				]
			},
			"ignore": [
				"src/**/*.d.ts",
				"src/test/**"
			]
		}
	}
}