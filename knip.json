{
	"$schema": "https://unpkg.com/knip@latest/schema.json",
	"workspaces": {
		"packages/ui": {},
		"apps/analytics-web": {},
		"packages/analytics": {
			"entry": ["src/index.ts", "src/server.ts"]
		},
		"apps/documentation": {
			"ignore": ["lib/i18n/request.ts", "next-sitemap.config.js"]
		},
		"packages/protocol-validation": {},
		"packages/network-query": {
			"entry": ["src/index.ts"],
			"project": ["src/**/*.{ts,js}"]
		},
		"apps/architect-vite": {
			"entry": ["index.html!", "src/main.tsx"],
			"project": ["src/**/*.{ts,tsx,js,jsx}"],
			"paths": {
				"~/*": ["./src/*"]
			},
			"ignore": ["src/**/*.d.ts", "src/test/**"]
		},
		"workers/development-protocol": {},
		"workers/posthog-proxy": {},
		"apps/interviewer": {
			"entry": ["src/main/index.js", "src/preload/index.js", "src/index.jsx"],
			"project": ["src/**/*.{js,jsx}"],
			"ignore": ["integration-tests/**", "scripts/**", "config/**", "src/shims/**", "build-resources/**"],
			"ignoreDependencies": [
				"@babel/*",
				"electron",
				"electron-builder",
				"electron-vite",
				"vite",
				"vitest",
				"@vitest/*",
				"@vitejs/*",
				"sass",
				"postcss*",
				"autoprefixer",
				"stylelint*",
				"eslint*"
			],
			"paths": {
				"@/*": ["./src/*"],
				"~/*": ["./node_modules/*"]
			}
		}
	}
}
