#!/usr/bin/env sh

current_branch=$(git rev-parse --abbrev-ref HEAD)

if [ "$current_branch" = "main" ]; then
  echo "ğŸ” Running strict checks for main branch..."
  
  # Run biome check without --unsafe flag for stricter validation
  pnpm biome check . || {
    echo "âŒ Biome checks failed. Please fix all linting errors before pushing to main."
    exit 1
  }
  
  # Run type checking
  pnpm typecheck-all || {
    echo "âŒ Type checking failed. Please fix all type errors before pushing to main."
    exit 1
  }
  
  echo "âœ… All checks passed for main branch push."
fi