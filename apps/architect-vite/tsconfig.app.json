{
	"extends": "@codaco/tsconfig/base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		},
		"tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
		"types": ["vite/client"]
	},
	"include": [
		"src/global.d.ts",
		"**/*.js",
		"**/*.jsx",
		"**/*.mjs",
		"**/*.cjs",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
