{
	"name": "network-canvas-interviewer",
	"version": "6.5.4",
	"productName": "Network Canvas Interviewer",
	"description": "A tool for conducting Network Canvas Interviews.",
	"author": "Complex Data Collective",
	"private": true,
	"engines": {
		"node": ">=22.0.0"
	},
	"packageManager": "pnpm@9.15.4",
	"scripts": {
		"dev": "electron-vite dev",
		"build": "electron-vite build",
		"preview": "electron-vite preview",
		"build:electron": "electron-vite build",
		"pack": "npm run build && electron-builder --dir",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:update-snapshots": "vitest run --update",
		"dist:linux": "npm run build && electron-builder -l",
		"dist:mac": "npm run build && electron-builder -m --x64",
		"dist:win": "npm run build && electron-builder -w",
		"preflight": "npm run lint && npm test -- --coverage"
	},
	"repository": {
		"type": "git"
	},
	"devDependencies": {
		"@babel/core": "7.11.1",
		"@babel/plugin-proposal-class-properties": "7.7.4",
		"@babel/plugin-proposal-json-strings": "7.7.4",
		"@babel/plugin-proposal-nullish-coalescing-operator": "~7.18.6",
		"@babel/plugin-syntax-dynamic-import": "7.7.4",
		"@babel/plugin-syntax-import-meta": "7.7.4",
		"@babel/preset-env": "7.10.4",
		"@babel/preset-react": "7.10.1",
		"@codaco/protocol-validation": "^5.0.2",
		"@codaco/shared-consts": "~0.0.1-alpha.3",
		"@codaco/ui": "~5.8.6",
		"@material-ui/icons": "^4.11.3",
		"@electron/notarize": "~2.3.0",
		"@faker-js/faker": "~6.0.0-alpha.5",
		"@vitejs/plugin-react": "^5.1.2",
		"@zippytech/sorty": "^2.0.0",
		"animejs": "^2.2.0",
		"async": "^3.2.0",
		"autoprefixer": "~9.8.8",
		"buffer": "^5.2.1",
		"chalk": "1.1.3",
		"change-case": "^3.0.1",
		"classnames": "^2.2.6",
		"color": "^2.0.0",
		"compare-versions": "^3.6.0",
		"concaveman": "^1.2.0",
		"connected-react-router": "^6.8.0",
		"cross-env": "^5.2.0",
		"crypto-browserify": "~3.12.1",
		"csvtojson": "^2.0.8",
		"dotenv": "4.0.0",
		"electron": "^35.7.5",
		"electron-builder": "^26.4.0",
		"electron-devtools-installer": "^3.0.0",
		"electron-vite": "^5.0.0",
		"electron-winstaller": "^4.0.0",
		"emoji-dictionary": "^1.0.9",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.6.0",
		"enzyme-to-json": "^3.4.3",
		"eventemitter3": "^3.1.0",
		"framer-motion": "^2.9.1",
		"fuse.js": "~6.4.6",
		"fuse.js-legacy": "npm:fuse.js@3.4.6",
		"history": "^4.7.2",
		"i": "^0.3.7",
		"icon-gen": "^1.2.3",
		"imgbb-uploader": "^1.0.3",
		"jsdom": "^27.0.0",
		"jssha": "^3.1.0",
		"jszip": "^3.7.0",
		"lodash": "^4.17.23",
		"object-assign": "4.1.1",
		"postcss": "~8.4.32",
		"postcss-flexbugs-fixes": "~4.2.1",
		"postcss-preset-env": "~9.1.2",
		"promise": "7.1.1",
		"prop-types": "^15.6.2",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-flip-toolkit": "^5.0.5",
		"react-redux": "^7.2.1",
		"react-router-dom": "^5.2.0",
		"react-transition-group": "^2.5.0",
		"react-virtualized": "~9.22.3",
		"react-virtualized-auto-sizer": "~1.0.5",
		"react-window": "~1.8.6",
		"recompose": "^0.26.0",
		"redux": "^4.0.5",
		"redux-form": "^8.3.6",
		"redux-logger": "^2.7.4",
		"redux-mock-store": "^1.5.3",
		"redux-persist": "^6.0.0",
		"redux-thunk": "^2.3.0",
		"regenerator-runtime": "^0.13.3",
		"reselect": "^3.0.0",
		"rxjs": "^5.5.12",
		"sanitize-filename": "^1.6.3",
		"sass": "^1.70.0",
		"stream-browserify": "~3.0.0",
		"svg2png": "^4.1.1",
		"uuid": "^3.4.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.0",
		"@vitest/coverage-v8": "^4.0.0",
		"whatwg-fetch": "2.0.3",
		"xml2js": "~0.5.0",
		"xss": "^0.3.4"
	},
	"dependencies": {
		"@codaco/network-exporters": "workspace:*",
		"@codaco/network-query": "workspace:*",
		"@xmldom/xmldom": "~0.8.10",
		"archiver": "^4.0.1",
		"d3-force": "~3.0.0",
		"decompress": "^4.2.1",
		"electron-log": "^4.2.2",
		"fs-extra": "^11.1.1",
		"ohash": "~2.0.11"
	},
	"homepage": ".",
	"main": "out/main/index.js",
	"build": {
		"extends": null,
		"files": [
			"out/**/*",
			"node_modules/**/*",
			"!node_modules/.bin",
			"!node_modules/.cache",
			"!node_modules/.pnpm",
			"!node_modules/**/*.md",
			"!node_modules/**/*.d.ts",
			"!node_modules/**/test/**",
			"!node_modules/**/tests/**",
			"!node_modules/**/__tests__/**",
			"!node_modules/**/docs/**",
			"!node_modules/**/LICENSE*",
			"!node_modules/**/CHANGELOG*",
			"!node_modules/**/README*",
			"!node_modules/**/*.map",
			"!node_modules/**/app-builder-lib/**",
			"!node_modules/**/dmg-builder/**",
			"!node_modules/**/electron-builder/**",
			"!node_modules/**/electron-publish/**",
			"!node_modules/**/builder-util/**",
			"!node_modules/**/builder-util-runtime/**",
			"!node_modules/**/node-gyp/**",
			"!node_modules/**/cacache/**",
			"!node_modules/**/npm/**",
			"!node_modules/**/gyp/**",
			"!node_modules/**/@electron/rebuild/**",
			"!node_modules/**/eslint*/**",
			"!node_modules/**/typescript/**",
			"!node_modules/**/stylelint*/**",
			"!node_modules/**/vitest/**",
			"!node_modules/**/@vitest/**",
			"!node_modules/**/vite/**",
			"!node_modules/**/@babel/core/**",
			"!node_modules/**/@babel/parser/**",
			"!node_modules/**/lodash/**"
		],
		"extraResources": [
			"./build-resources/externals/**"
		],
		"appId": "Network-Canvas-Interviewer-6",
		"afterSign": "./build-resources/scripts/afterSignHook.js",
		"directories": {
			"buildResources": "build-resources",
			"output": "release-builds"
		},
		"nsis": {
			"include": "build-resources/scripts/bonjour.nsh"
		},
		"win": {
			"target": "nsis"
		},
		"mac": {
			"category": "public.app-category.education",
			"hardenedRuntime": true,
			"entitlements": "./build-resources/entitlements.mac.inherit.plist"
		},
		"linux": {
			"maintainer": "Joshua Melville <joshmelville@gmail.com>",
			"target": [
				{
					"target": "deb",
					"arch": [
						"x64",
						"arm64"
					]
				},
				{
					"target": "rpm",
					"arch": [
						"x64",
						"arm64"
					]
				},
				{
					"target": "AppImage",
					"arch": [
						"x64",
						"arm64"
					]
				},
				{
					"target": "tar.gz",
					"arch": [
						"x64",
						"arm64"
					]
				}
			]
		},
		"publish": [
			{
				"provider": "github",
				"owner": "complexdatacollective",
				"repo": "interviewer"
			}
		]
	},
	"cordova": {
		"platforms": [
			"ios",
			"android"
		],
		"plugins": {
			"cordova-plugin-file-transfer": {},
			"cordova-plugin-device": {},
			"cordova-plugin-app-version": {},
			"cordova-plugin-zeroconf": {},
			"cordova-plugin-inappbrowser": {},
			"cordova-plugin-chooser": {},
			"cordova-plugin-network-information": {},
			"cordova-sqlite-storage": {},
			"cordova-plugin-x-socialsharing-android12": {
				"PHOTO_LIBRARY_ADD_USAGE_DESCRIPTION": "This app requires photo library access to function properly.",
				"PHOTO_LIBRARY_USAGE_DESCRIPTION": "This app requires photo library access to function properly."
			},
			"cordova-plugin-androidx-adapter": {},
			"cordova-plugin-network-canvas-client": {},
			"cordova-plugin-fullscreen": {},
			"cordova-plugin-ionic-keyboard": {},
			"cordova-plugin-file": {
				"ANDROIDX_WEBKIT_VERSION": "1.4.0"
			}
		}
	}
}
